<% if notice!=nil %>
<div class="column is-12 ">
    <div class="notification is-warning">
      <button class="delete"></button>
      <%= notice %>
    </div>
</div>
<% end %>

<h1>Data Jawaban</h1>

<table>
  <thead>
    <tr>
      <th>Jawaban</th>
      <th>Bobot</th>
      <th>Pertanyaan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.answer %></td>
        <td><%= answer.value %></td>
        <td><%= answer.question_id %></td>
        <td><%= link_to 'Lihat', answer %></td>
        <td><%= link_to 'Ubah', edit_answer_path(answer) %></td>
        <td><%= link_to 'Hapus', answer, method: :delete, data: { confirm: 'Anda yakin?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Tambah Jawaban', new_answer_path %>
